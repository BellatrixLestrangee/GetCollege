<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/lightblue"
    android:layout_height="match_parent"
    tools:context="com.example.bellatrix.getcollege.Main3Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/box"
                android:background="#ffffff"
                android:paddingLeft="10dp"
                android:text="Registration "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:paddingTop="10dp"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:id="@+id/first_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/last_name"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:text="Email ID" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:id="@+id/email_id"/>


            
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Institute"/>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="@dimen/box"
                android:id="@+id/spinnerlist"
                android:prompt="@+id/spinner_text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"

                />



        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:ems="10"
            android:inputType="textPassword"
            android:id="@+id/pass_word"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Repeat Password"

                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:ems="10"
                android:inputType="textPassword"
                android:id="@+id/r_pass_word"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your Category"/>
            <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:paddingTop="5dp"
                android:id="@+id/radio_group_1"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/r_button_1"
                android:checked="false"
                android:layout_gravity="center"
                android:text="Faculty"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:id="@+id/r_button_2"
                android:checked="true"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:text="Student"/>
        </RadioGroup>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_3"
                android:text="Submit"
                android:background="#ffffff"
                android:textAlignment="center"/>



        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
